<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefresh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/relative_layout"
            android:background="@color/color_primary_dark">

            <ImageView
                android:id="@+id/virus1"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_virus" />

            <ImageView
                android:id="@+id/virus2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="-45dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_virus" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/virus1"
                android:layout_marginTop="-5dp"
                android:src="@drawable/ic_virus" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size3"
                    android:text="India"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/yellow"
                    android:fontFamily="@string/bold"
                    android:drawableRight="@drawable/ic_dropdown"
                    android:drawablePadding="6dp"/>

                <TextView
                    android:id="@+id/updateDate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Updated at ..."
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@string/light"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/virus2"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/vertical_layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@color/yellow"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size1"
                                android:layout_marginStart="5dp"
                                android:text="Confirm"
                                android:textColor="@color/white"
                                android:fontFamily="@string/regular"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@color/blue_pie"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size1"
                                android:layout_marginStart="5dp"
                                android:text="Active"
                                android:textColor="@color/white"
                                android:fontFamily="@string/regular"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@color/green_pie"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size1"
                                android:layout_marginStart="5dp"
                                android:text="Recovered"
                                android:textColor="@color/white"
                                android:fontFamily="@string/regular"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@color/red_pie"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size1"
                                android:layout_marginStart="5dp"
                                android:text="Death"
                                android:textColor="@color/white"
                                android:fontFamily="@string/regular"/>
                        </LinearLayout>
                    </LinearLayout>
                    <org.eazegraph.lib.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        app:egInnerPaddingColor="@color/color_primary_dark"
                        app:egLegendTextSize="0sp"
                        app:egUsePieRotation="true"
                        app:egLegendHeight="0dp"
                        app:egValueTextSize="0sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/black_shade1">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card1"
                        android:layout_width="@dimen/card_width1"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp"
                        android:padding="12dp"
                        app:layout_constraintBottom_toTopOf="@id/card3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:cardBackgroundColor="@color/yellow"
                        app:strokeColor="@color/color_primary"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:id="@+id/confirmLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="14dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/regular"
                                    android:text="Confirm"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/title_size1" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/totalConfirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/bold"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />

                            <TextView
                                android:id="@+id/todayConfirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card2"
                        android:layout_width="@dimen/card_width1"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"
                        android:padding="12dp"
                        app:layout_constraintLeft_toRightOf="@id/card1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/card4"
                        app:cardBackgroundColor="@color/blue_pie"
                        app:strokeColor="@color/color_primary"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="14dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/regular"
                                    android:text="Active"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/title_size1" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/totalActive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/bold"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card3"
                        android:layout_width="@dimen/card_width1"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:padding="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/card4"
                        app:layout_constraintTop_toBottomOf="@id/card1"
                        app:cardBackgroundColor="@color/green_pie"
                        app:strokeColor="@color/color_primary"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="14dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/regular"
                                    android:text="Recovered"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/title_size1" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/totalRecovered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/bold"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />

                            <TextView
                                android:id="@+id/todayRecovered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card4"
                        android:layout_width="@dimen/card_width1"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:padding="12dp"
                        app:layout_constraintLeft_toRightOf="@id/card3"
                        app:layout_constraintTop_toBottomOf="@id/card2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:cardBackgroundColor="@color/red_pie"
                        app:strokeColor="@color/color_primary"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="14dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/regular"
                                    android:text="Death"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/title_size1" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/totalDeaths"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/bold"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />

                            <TextView
                                android:id="@+id/todayDeaths"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card5"
                        android:layout_width="@dimen/card_width1"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card3"
                        app:cardBackgroundColor="@color/pink"
                        app:strokeColor="@color/color_primary"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="14dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/regular"
                                android:text="Tests"
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />

                            <TextView
                                android:id="@+id/totalTests"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/bold"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@string/regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_size1" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
            </GridLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/nav_drawer"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>